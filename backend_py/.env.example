# ============================================================================
# SOLVEREIGN V3 Environment Configuration
# ============================================================================
# Copy this file to .env and update with your values
# Usage: python-dotenv loads these automatically
# ============================================================================

# Database Connection
DATABASE_URL=postgresql://solvereign:dev_password_change_in_production@localhost:5432/solvereign
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=solvereign
DATABASE_USER=solvereign
DATABASE_PASSWORD=dev_password_change_in_production

# Solver Configuration
SOLVER_SEED=94                    # Default seed (normal forecast)
SOLVER_SEED_KW51=18               # Seed for compressed forecast (KW51)
SOLVER_NUM_WORKERS=1              # Must be 1 for determinism
SOLVER_TIMEOUT_SECONDS=300        # Max solver runtime (5 minutes)

# Operational Rules
FREEZE_WINDOW_MINUTES=720         # 12 hours before shift start
FREEZE_WINDOW_BEHAVIOR=FROZEN     # FROZEN | OVERRIDE_REQUIRED

# Parser Configuration
PARSER_CONFIG_VERSION=v3.0.0-mvp  # Parser version for hash tracking
PARSER_STRICT_MODE=true           # Fail on any parsing error (vs. warn)

# Audit Configuration
AUDIT_CHECKS_ENABLED=true
AUDIT_CHECK_COVERAGE=true
AUDIT_CHECK_REST=true
AUDIT_CHECK_OVERLAP=true
AUDIT_CHECK_SPAN=true
AUDIT_CHECK_REPRODUCIBILITY=true

# Export Configuration
EXPORT_MATRIX_CSV=true
EXPORT_ROSTERS_CSV=true
EXPORT_KPIS_JSON=true
EXPORT_AUDIT_JSON=true

# Logging
LOG_LEVEL=INFO                    # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json                   # json | text
LOG_FILE=logs/solvereign.log

# Security (Production)
SECRET_KEY=change_me_in_production_to_random_string
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Feature Flags
FEATURE_SLACK_INTEGRATION=false   # Enable Slack input parsing
FEATURE_FREEZE_WINDOWS=true       # Enable freeze window enforcement
FEATURE_DIFF_ENGINE=true          # Enable diff computation
FEATURE_STREAMLIT_UI=true         # Enable Streamlit dashboard

# Development
DEBUG=false
TESTING=false
PYTEST_DISABLE_WARNINGS=1
