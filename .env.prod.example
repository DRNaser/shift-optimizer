# =============================================================================
# SOLVEREIGN Production Environment Variables
# =============================================================================
#
# Copy this file to .env.prod and set all values.
# NEVER commit .env.prod to version control!
#
# Usage:
#   docker compose -f docker-compose.prod.yml --env-file .env.prod up -d
#

# Database password (required, minimum 16 characters recommended)
POSTGRES_PASSWORD=CHANGE_ME_STRONG

# Session signing secret (required, minimum 64 characters recommended)
# Generate with: openssl rand -hex 32
SOLVEREIGN_SESSION_SECRET=CHANGE_ME_64B

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG
