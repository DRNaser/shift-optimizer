{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://solvereign.com/schemas/incident.json",
  "version": "1.0.0",
  "title": "Incident Schema",
  "description": "Schema for active incident records in SOLVEREIGN",
  "type": "object",
  "required": ["id", "severity", "status", "type", "created_at", "summary"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^INC-[0-9]{8}-[A-Z0-9]{6}$",
      "description": "Incident ID in format INC-YYYYMMDD-XXXXXX"
    },
    "type": {
      "type": "string",
      "enum": ["security", "perf", "stability", "quality"],
      "description": "Incident type for structured routing: security=RLS/auth/leak, perf=timeout/memory, stability=crash/down, quality=test/audit"
    },
    "severity": {
      "type": "string",
      "enum": ["S0", "S1", "S2", "S3"],
      "description": "Incident severity: S0=Critical/Security, S1=High/Integrity, S2=Medium/Degraded, S3=Low/UX"
    },
    "status": {
      "type": "string",
      "enum": ["new", "active", "investigating", "mitigated", "resolved", "stale"],
      "description": "Current incident status"
    },
    "tenant_id": {
      "type": ["string", "null"],
      "description": "Affected tenant ID, null if platform-wide"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Brief description of the incident"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when incident was created"
    },
    "updated_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "resolved_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "ISO 8601 timestamp when incident was resolved"
    },
    "assigned_to": {
      "type": ["string", "null"],
      "description": "Email or ID of incident commander"
    },
    "root_cause": {
      "type": ["string", "null"],
      "description": "Root cause description (filled after investigation)"
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string",
            "enum": ["log", "artifact", "screenshot", "dump", "config"]
          },
          "path": {
            "type": "string",
            "description": "Path to evidence file"
          },
          "hash": {
            "type": ["string", "null"],
            "pattern": "^[a-f0-9]{64}$",
            "description": "SHA256 hash of evidence file"
          },
          "captured_at": {
            "type": ["string", "null"],
            "format": "date-time"
          }
        }
      },
      "description": "List of evidence artifacts"
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "action"],
        "additionalProperties": false,
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "action": {
            "type": "string"
          },
          "actor": {
            "type": ["string", "null"]
          }
        }
      },
      "description": "Timeline of incident actions"
    }
  }
}
